@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<App.Domain.Section>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">@App.Resources.WebApp.Views.Shared.CRUD.CreateNew</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Hotel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @{
        System.Diagnostics.Debug.Assert(Model != null, nameof(Model) + " != null");
    }
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Hotel!.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">@App.Resources.WebApp.Views.Shared.CRUD.Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">@App.Resources.WebApp.Views.Shared.CRUD.Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">@App.Resources.WebApp.Views.Shared.CRUD.Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
