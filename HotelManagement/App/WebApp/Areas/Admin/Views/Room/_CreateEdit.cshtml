@using Microsoft.AspNetCore.Mvc.TagHelpers
@model App.Domain.Room

<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="RoomTypeId" class="control-label"></label>
    <select asp-for="RoomTypeId" class ="form-control" asp-items="ViewBag.RoomTypeId"></select>
</div>
<div class="form-group">
    <label asp-for="SectionId" class="control-label"></label>
    <select asp-for="SectionId" class ="form-control" asp-items="ViewBag.SectionId"></select>
</div>
<div class="form-group">
    <label asp-for="Status" class="control-label"></label>
    <select asp-for="Status" class="form-control"></select>
    <span asp-validation-for="Status" class="text-danger"></span>
</div>
