@using Microsoft.AspNetCore.Mvc.TagHelpers
@model App.Domain.Client

@{
    ViewData["Title"] = "Create";
}

<h1>@App.Resources.WebApp.Views.Shared.CRUD.CreateNew</h1>

<h4>Client</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <partial name="_CreateEdit" model="Model"></partial>
            
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary"/>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@App.Resources.WebApp.Views.Shared.CRUD.BackToList</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
