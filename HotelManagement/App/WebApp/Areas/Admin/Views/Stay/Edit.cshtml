@using Microsoft.AspNetCore.Mvc.TagHelpers
@model App.Domain.Stay

@{
    ViewData["Title"] = "Edit";
}

<h1>@App.Resources.WebApp.Views.Shared.CRUD.Edit</h1>

<h4>Stay</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <partial name="_CreateEdit" model="Model"></partial>

            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@App.Resources.WebApp.Views.Shared.CRUD.BackToList</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
