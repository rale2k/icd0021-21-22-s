@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<App.Domain.Amenity>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">@App.Resources.WebApp.Views.Shared.CRUD.CreateNew</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model!) {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Description
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">@App.Resources.WebApp.Views.Shared.CRUD.Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">@App.Resources.WebApp.Views.Shared.CRUD.Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">@App.Resources.WebApp.Views.Shared.CRUD.Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
