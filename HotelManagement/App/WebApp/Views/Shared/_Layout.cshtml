@using Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">@App.Resources.WebApp.Views.Shared._Layout.HotelManagementSystem</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@App.Resources.WebApp.Views.Shared._Layout.Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">@App.Resources.WebApp.Views.Shared._Layout.Privacy</a>
                    </li>
                    <li class="nav-item">
                        <div class="dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="javascript:{}" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                @App.Resources.WebApp.Views.Shared._Layout.Admin
                            </a >
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                <li><a class="dropdown-item nav-link" asp-area="Admin" asp-controller="Amenity" asp-action="Index">@App.Resources.Domain.Entity.Name.Amenity</a></li>
                                <li><a class="dropdown-item nav-link" asp-area="Admin" asp-controller="Client" asp-action="Index">@App.Resources.Domain.Entity.Name.Client</a></li>
                                <li><a class="dropdown-item nav-link" asp-area="Admin" asp-controller="Hotel" asp-action="Index">@App.Resources.Domain.Entity.Name.Hotel</a></li>
                                <li><a class="dropdown-item nav-link" asp-area="Admin" asp-controller="Reservation" asp-action="Index">@App.Resources.Domain.Entity.Name.Reservation</a></li>
                                <li><a class="dropdown-item nav-link" asp-area="Admin" asp-controller="Room" asp-action="Index">@App.Resources.Domain.Entity.Name.Room</a></li>
                                <li><a class="dropdown-item nav-link" asp-area="Admin" asp-controller="RoomType" asp-action="Index">@App.Resources.Domain.Entity.Name.RoomType</a></li>
                                <li><a class="dropdown-item nav-link" asp-area="Admin" asp-controller="Section" asp-action="Index">@App.Resources.Domain.Entity.Name.Section</a></li>
                                <li><a class="dropdown-item nav-link" asp-area="Admin" asp-controller="Stay" asp-action="Index">@App.Resources.Domain.Entity.Name.Stay</a></li>
                                <li><a class="dropdown-item nav-link" asp-area="Admin" asp-controller="Ticket" asp-action="Index">@App.Resources.Domain.Entity.Name.Ticket</a></li>
                            </ul>
                        </div>                        
                    </li>
                </ul>
                <partial name="_LanguageSelectPartial"/>
                <partial name="_LoginPartial"/>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2022 - WebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">@App.Resources.WebApp.Views.Shared._Layout.Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>